                            <ul id="progressbar">
                                <li class="active" id="teacher"><strong>Docente</strong></li>
                                <li id="articles"><strong>Artigos</strong></li>
                                <li id="productions"><strong>Produções Diversas</strong></li>
                                <li id="infos"><strong>Outras informações</strong></li>
                                <li id="confirm"><strong>Finalizado</strong></li>
                            </ul> <!-- fieldsets -->
                            <fieldset>
                                <div class="form-card">
                                    <h2 class="fs-title">Informações do docente</h2> <input type="text" name="uname"
                                        placeholder="Nome" />
                                </div> <input type="button" name="next" class="next action-button" value="Próximo" />
                            </fieldset>
                            <fieldset>
                                <div class="form-card">
                                    <h2 class="fs-title">Personal Information</h2> <input type="text" name="fname"
                                        placeholder="First Name" /> <input type="text" name="lname"
                                        placeholder="Last Name" /> <input type="text" name="phno"
                                        placeholder="Contact No." /> <input type="text" name="phno_2"
                                        placeholder="Alternate Contact No." />
                                </div> <input type="button" name="previous" class="previous action-button-previous"
                                    value="Anterior" /> <input type="button" name="next" class="next action-button"
                                    value="Próximo" />
                            </fieldset>
                            <fieldset>
                                <div class="form-card">
